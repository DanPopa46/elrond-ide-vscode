{
	"name": "vscode-elrond-ide",
	"displayName": "Elrond IDE",
	"description": "Elrond IDE for developing Smart Contracts",
	"version": "0.3.7",
	"publisher": "Elrond",
	"repository": {
		"type": "git",
		"url": "https://github.com/ElrondNetwork/vscode-elrond-c.git"
	},
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Programming Languages", "Extension Packs", "Debuggers", "Other"
	],
	"icon": "content/elrond_b.png",
	"activationEvents": [
		"onCommand:extension.openIDE",
		"onCommand:extension.buildContract"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.openIDE",
				"title": "Elrond - open IDE"
			},
			{
				"command": "extension.buildContract",
				"title": "Elrond - build contract"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.buildContract",
					"group": "dummyGroup",
					"when": "resourceExtname == .c"
				}
			]
		},
		"configuration": {
			"title": "vscode-elrond-ide",
			"properties": {
				"elrond.restApi.port": {
					"type": "number",
					"default": "8080",
					"description": "API port of node-debug."
				},
				"elrond.testnetUrl": {
					"type": "string",
					"default": "https://wallet-api.elrond.com",
					"description": "Testnet proxy URL."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"compile-bootstrap": "node-sass --output-style compressed ./src/theme/bootstrap.scss ./content/bootstrap.css",
		"compile-theme": "node-sass --output-style compressed ./src/theme/theme.scss ./content/theme.css"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/request": "^2.48.3",
		"@types/underscore": "^1.9.3",
		"@types/vscode": "^1.38.0",
		"bootstrap": "^4.3.1",
		"mocha": "^6.1.4",
		"node-sass": "^4.13.0",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"request": "^2.88.0",
		"underscore": "^1.9.1",
		"glob": "^7.1.4"
	},
	"extensionDependencies": ["vadimcn.vscode-lldb"]
}
