{
	"name": "vscode-elrond-ide",
	"displayName": "Elrond IDE",
	"description": "Elrond IDE",
	"version": "0.0.5",
	"publisher": "ElrondNetwork",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.openIDE",
		"onCommand:extension.buildCurrentFile",
		"onCommand:extension.startDebugServer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.openIDE",
				"title": "Elrond - open IDE"
			},
			{
				"command": "extension.buildCurrentFile",
				"title": "Smart Contracts - build current file"
			},
			{
				"command": "extension.startDebugServer",
				"title": "Smart Contracts - start (restart) debug server"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.buildCurrentFile",
					"group": "dummyGroup",
					"when": "resourceExtname == .c"
				}
			]
		},
		"configuration": {
			"title": "vscode-elrond-ide",
			"properties": {
				"elrond.downloadMirror": {
					"type": "string",
					"default": "https://workshop.elrond.com/ElrondIDE",
					"description": "Download mirror for Elrond IDE tools."
				},
				"elrond.ideFolder": {
					"type": "string",
					"default": "/home/someone/Elrond/ide",
					"description": "Folder for IDE tools."
				},
				"elrond.restApi.port": {
					"type": "number",
					"default": "8080",
					"description": "Debug server port."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"@types/request": "^2.48.3",
		"@types/underscore": "^1.9.3",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"request": "^2.88.0",
		"underscore": "^1.9.1",
		"glob": "^7.1.4"
	}
}
