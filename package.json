{
	"name": "vscode-elrond-ide",
	"displayName": "Elrond IDE",
	"description": "Elrond IDE for developing Smart Contracts",
	"version": "0.5.0",
	"publisher": "Elrond",
	"repository": {
		"type": "git",
		"url": "https://github.com/ElrondNetwork/elrond-ide-vscode.git"
	},
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Programming Languages",
		"Extension Packs",
		"Debuggers",
		"Other"
	],
	"icon": "content/logo.png",
	"activationEvents": [
		"onCommand:elrond.installSdk",
		"workspaceContains:**/elrond.json"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "elrond.installSdk",
				"title": "Elrond: Install (Update) SDK"
			},
			{
				"command": "elrond.refreshTemplates",
				"title": "Refresh",
				"icon": {
					"light": "content/light/refresh.svg",
					"dark": "content/dark/refresh.svg"
				}
			},
			{
				"command": "elrond.newFromTemplate",
				"title": "New Contract"
			},
			{
				"command": "elrond.buildContract",
				"title": "Elrond: Build Contract"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "elrond.buildContract",
					"group": "buildGroup",
					"when": "resourceExtname == .c || resourceExtname == .cpp || resourceExtname == .rs"
				}
			],
			"view/title": [
				{
					"command": "elrond.refreshTemplates",
					"when": "view == contractTemplates",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "elrond.newFromTemplate",
					"when": "view == contractTemplates",
					"group": "inline"
				}
			]
		},
		"configuration": {
			"title": "vscode-elrond-ide",
			"properties": {
				"elrond.elrondsdk": {
					"type": "string",
					"default": "~/elrondsdk"
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "elrond",
					"title": "Elrond Explorer",
					"icon": "content/logo.png"
				}
			]
		},
		"views": {
			"elrond": [
				{
					"id": "contracts",
					"name": "Contracts",
					"contextualTitle": "Smart Contracts in Workspace"
				},
				{
					"id": "contractTemplates",
					"name": "Templates",
					"contextualTitle": "Smart Contract Templates"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "contractTemplates",
				"contents": "Write Smart Contracts using one of the templates as a starting point."
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.2",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.17.26",
		"@types/request": "^2.48.5",
		"@types/underscore": "^1.10.1",
		"@types/vscode": "^1.46.0",
		"mocha": "^6.1.4",
		"tslint": "^5.20.1",
		"typescript": "^3.9.5",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"glob": "^7.1.6",
		"request": "^2.88.2",
		"underscore": "^1.10.2"
	},
	"extensionDependencies": [
		"vadimcn.vscode-lldb"
	]
}