{
	"name": "vscode-elrond-c",
	"displayName": "Elrond Smart Contract Development in C",
	"description": "VS Code extension to enable Elrond smart contract development in C",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.buildCurrentFile",
		"onCommand:extension.runCurrentFile",
		"onCommand:extension.buildAndRunCurrentFile",
		"onCommand:extension.startDebugServer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.buildCurrentFile",
				"title": "Smart Contracts - build current file"
			},
			{
				"command": "extension.runCurrentFile",
				"title": "Smart Contracts - run current file"
			},
			{
				"command": "extension.buildAndRunCurrentFile",
				"title": "Smart Contracts - build & run current file"
			},
			{
				"command": "extension.startDebugServer",
				"title": "Smart Contracts - start (restart) debug server"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.buildAndRunCurrentFile",
					"group": "dummyGroup",
					"when": "resourceExtname == .c"
				}
			]
		},
		"configuration": {
			"title": "vscode-elrond-c",
			"properties": {
				"elrond.clangPath": {
					"type": "string",
					"default": "clang",
					"description": "clang tool."
				},
				"elrond.llcPath": {
					"type": "string",
					"default": "llc",
					"description": "llc tool."
				},
				"elrond.wasmLdPath": {
					"type": "string",
					"default": "wasm-ld",
					"description": "wasm-ld tool."
				},
				"elrond.elrondGoNodeDebugPath": {
					"type": "string",
					"default": "elrond-go-node-debug",
					"description": "Simple debug tool."
				},
				"elrond.restApi.toolPath": {
					"type": "string",
					"default": "elrond-go-node-debug-api",
					"description": "Debug server executable."
				},
				"elrond.restApi.port": {
					"type": "number",
					"default": "8080",
					"description": "Debug server port."
				},
				"elrond.restApi.configPath": {
					"type": "string",
					"default": "config.toml",
					"description": "Debug server configuration path."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"request": "^2.88.0"
	}
}
