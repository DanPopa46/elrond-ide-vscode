{
	"name": "vscode-elrond-ide",
	"displayName": "Elrond IDE",
	"description": "Elrond IDE for developing Smart Contracts",
	"version": "0.5.0",
	"publisher": "Elrond",
	"repository": {
		"type": "git",
		"url": "https://github.com/ElrondNetwork/elrond-ide-vscode.git"
	},
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Programming Languages",
		"Extension Packs",
		"Debuggers",
		"Other"
	],
	"icon": "content/elrond_logo.png",
	"activationEvents": [
		"onCommand:extension.buildContract"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.buildContract",
				"title": "Elrond - build contract"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.buildContract",
					"group": "buildGroup",
					"when": "resourceExtname == .c || resourceExtname == .cpp || resourceExtname == .rs"
				}
			]
		},
		"configuration": {
			"title": "vscode-elrond-ide",
			"properties": {}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.2",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.17.26",
		"@types/request": "^2.48.5",
		"@types/underscore": "^1.10.1",
		"@types/vscode": "^1.46.0",
		"mocha": "^6.1.4",
		"tslint": "^5.20.1",
		"typescript": "^3.9.5",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"glob": "^7.1.6",
		"request": "^2.88.2",
		"underscore": "^1.10.2"
	},
	"extensionDependencies": [
		"vadimcn.vscode-lldb"
	]
}
