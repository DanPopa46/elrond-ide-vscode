{
	"name": "vscode-elrond-ide",
	"displayName": "Elrond IDE",
	"description": "Elrond IDE",
	"version": "0.2.6",
	"publisher": "ElrondNetwork",
	"repository": {
		"type": "git",
		"url": "https://github.com/ElrondNetwork/vscode-elrond-c.git"
	},
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"icon": "content/logo-background.png",
	"activationEvents": [
		"onCommand:extension.openIDE",
		"onCommand:extension.buildCurrentFile",
		"onCommand:extension.startNodeDebug",
		"onCommand:extension.createSmartContract"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.openIDE",
				"title": "Elrond - open IDE"
			},
			{
				"command": "extension.buildCurrentFile",
				"title": "Elrond - build current file"
			},
			{
				"command": "extension.startNodeDebug",
				"title": "Elrond - start (restart) node debug"
			},
			{
				"command": "extension.createSmartContract",
				"title": "Elrond - create smart contract from prototype (template)"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.buildCurrentFile",
					"group": "dummyGroup",
					"when": "resourceExtname == .c"
				}
			]
		},
		"configuration": {
			"title": "vscode-elrond-ide",
			"properties": {
				"elrond.downloadMirror": {
					"type": "string",
					"default": "https://ide.elrond.com",
					"description": "Download mirror for Elrond IDE tools."
				},
				"elrond.ideFolder": {
					"type": "string",
					"default": "/home/someone/Elrond/ide",
					"description": "Folder for IDE tools."
				},
				"elrond.restApi.port": {
					"type": "number",
					"default": "8080",
					"description": "API port of node-debug."
				},
				"elrond.testnetUrl": {
					"type": "string",
					"default": "https://testnet.elrond.com/#/wallet",
					"description": "Testnet proxy URL."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"compile-bootstrap": "node-sass --output-style compressed ./src/theme/bootstrap.scss ./content/bootstrap.css",
		"compile-theme": "node-sass --output-style compressed ./src/theme/theme.scss ./content/theme.css"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/request": "^2.48.3",
		"@types/underscore": "^1.9.3",
		"@types/vscode": "^1.38.0",
		"bootstrap": "^4.3.1",
		"mocha": "^6.1.4",
		"node-sass": "^4.13.0",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"request": "^2.88.0",
		"underscore": "^1.9.1",
		"glob": "^7.1.4"
	}
}
